<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/Background"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/item_summary_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/progressbarStepsSeclected"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circle_progressbar_steps"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageStepsSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/MyTextViewSteps"
            android:layout_above="@id/countStepsSelected"
            android:contentDescription="@string/steps_image"
            android:src="@drawable/baseline_directions_run_24" />

        <TextView
            android:id="@+id/countStepsSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            style="@style/MyTextViewSteps"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/countStepsSelected"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageGoalsStepsSelected"
                android:layout_width="15dp"
                android:layout_height="15dp"
                style="@style/MyTextViewSteps"
                android:contentDescription="@string/steps_goal"
                android:src="@drawable/goals_24" />

            <TextView
                android:id="@+id/stepsGoalSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/MyTextViewSteps"
                android:text="@string/zero"
                android:textSize="15sp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_calories_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/progressbarCaloriesSelected"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circle_progressbar_calories"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageCaloriesSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/countCaloriesSelected"
            style="@style/MyTextViewCalories"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/calories_image"
            android:src="@drawable/calories" />

        <TextView
            android:id="@+id/countCaloriesSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            style="@style/MyTextViewCalories"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/countCaloriesSelected"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageGoalsCaloriesSelected"
                android:layout_width="15dp"
                android:layout_height="15dp"
                style="@style/MyTextViewCalories"
                android:contentDescription="@string/calories_goal"
                android:src="@drawable/goals_24" />

            <TextView
                android:id="@+id/caloriesGoalSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/MyTextViewCalories"
                android:text="@string/zero"
                android:textSize="15sp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_distance_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/progressbarDistanceSelected"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circle_progressbar_distance"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageDistanceSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/countDistanceSelected"
            style="@style/MyTextViewDistance"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/distance_image"
            android:src="@drawable/distance" />

        <TextView
            android:id="@+id/countDistanceSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            style="@style/MyTextViewDistance"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/countDistanceSelected"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageGoalsDistanceSelected"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/distance_goal"
                android:src="@drawable/goals_24"
                style="@style/MyTextViewDistance"/>

            <TextView
                android:id="@+id/distanceGoalSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/zero"
                android:textSize="15sp"
                style="@style/MyTextViewDistance"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
