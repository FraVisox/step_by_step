<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.summary.LastSummaryFragment">


    <RelativeLayout
        android:id="@+id/progress_summary_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">


        <ProgressBar
            android:id="@+id/progressbarLastSteps"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circle_progressbar"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageLastSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/countLastSteps"
            android:src="@drawable/baseline_directions_run_24" />

        <TextView
            android:id="@+id/countLastSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_below="@id/countLastSteps"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/goals_24" />

            <TextView
                android:id="@+id/goalsLastSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>
        <!-- Obiettivi -->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/progress_calories_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">

            <ProgressBar
                android:id="@+id/progressbarLastCalories"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circle_progressbar"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageLastCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/countLastCalories"
                android:layout_centerHorizontal="true"
                android:src="@drawable/calories" />

            <TextView
                android:id="@+id/countLastCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_below="@id/countLastCalories"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageGoalsCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goals_24" />

                <TextView
                    android:id="@+id/goalsLastCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/progress_distance_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">

            <ProgressBar
                android:id="@+id/progressbarLastDistance"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circle_progressbar"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageLastDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/countLastDistance"
                android:layout_centerHorizontal="true"
                android:src="@drawable/distance" />

            <TextView
                android:id="@+id/countLastDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_below="@id/countLastDistance"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageGoalsDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goals_24" />

                <TextView
                    android:id="@+id/goalsLastDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>