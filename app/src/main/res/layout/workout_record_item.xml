<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/GoalCardSteps"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/progressBar"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/workout_record"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:divider="@drawable/dividerhorizontal"
        android:showDividers="middle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="8dp"
            style="@style/MyTextView"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="@drawable/dividervertical"
            android:showDividers="middle">

            <!-- Info sui metri percorsi -->
            <TextView
                android:text="@string/meters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MyTextView"
                />

            <!-- Seconda Card -->
            <TextView
                android:text="@string/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MyTextView"
                />

            <TextView
                android:text="@string/speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MyTextView"
                />

            <!-- Terza Card -->
            <TextView
                android:text="@string/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/MyTextView"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="@drawable/dividervertical"
            android:showDividers="middle">

            <!-- Info sui metri percorsi -->
            <TextView
                android:id="@+id/meters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MyTextView"
                />

            <!-- Seconda Card -->
            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MyTextView"
               />

            <TextView
                android:id="@+id/speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/MyTextView"
                />

            <!-- Terza Card -->
            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/MyTextView"
                />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>