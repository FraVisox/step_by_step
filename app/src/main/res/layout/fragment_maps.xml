<?xml version="1.0" encoding="utf-8"?>

<!-- This fragment manages the lifecycle of the map-->
<!-- To configure the options of the map, you can simply add in the code with map:..-->
<!-- Elenco delle cose da mettere: https://developers.google.com/maps/documentation/android-sdk/configure-map#runtime-settings -->
<androidx.fragment.app.FragmentContainerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.maps.MapsFragment"
    map:uiZoomControls="true"
    map:uiRotateGestures="true"
    map:mapType="satellite"
    map:cameraZoom="17"
    />