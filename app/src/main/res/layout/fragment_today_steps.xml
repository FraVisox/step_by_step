<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.steps.TodayStepsFragment">


    <RelativeLayout
        android:id="@+id/progress_steps_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">


        <ProgressBar
            android:id="@+id/progressbarStepsToday"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circle_progressbar"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageStepsToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/countStepsToday"
            android:src="@drawable/baseline_directions_run_24" />

        <TextView
            android:id="@+id/countStepsToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <!-- Obiettivi -->
        <TextView
            android:id="@+id/goalsStepsToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countStepsToday"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <!-- Immagine accanto agli obiettivi -->
        <ImageView
            android:id="@+id/imageGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_toStartOf="@id/goalsStepsToday"
            android:layout_alignTop="@id/goalsStepsToday"
            android:src="@drawable/goals_24" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/progress_calories_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">

            <ProgressBar
                android:id="@+id/progressbarCaloriesToday"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circle_progressbar"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageCaloriesToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/countCaloriesToday"
                android:layout_centerHorizontal="true"
                android:src="@drawable/calories" />

            <TextView
                android:id="@+id/countCaloriesToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Obiettivi -->
            <TextView
                android:id="@+id/goalsCaloriesToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/countCaloriesToday"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:text="0"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/imageGoalsCalories"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toStartOf="@id/goalsCaloriesToday"
                android:layout_alignTop="@id/goalsCaloriesToday"
                android:src="@drawable/goals_24" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/progress_distance_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">

            <ProgressBar
                android:id="@+id/progressbarDistanceToday"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circle_progressbar"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageDistanceToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/countDistanceToday"
                android:layout_centerHorizontal="true"
                android:src="@drawable/distance" />

            <TextView
                android:id="@+id/countDistanceToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Obiettivi -->
            <TextView
                android:id="@+id/goalsDistanceToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/countDistanceToday"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:text="@string/zero"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/imageGoalsDistance"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toStartOf="@id/goalsDistanceToday"
                android:layout_alignTop="@id/goalsDistanceToday"
                android:src="@drawable/goals_24" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>