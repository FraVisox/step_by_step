<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.App" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/Surface</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Background fragments -->
    <style name="Background">
        <item name="android:background">@color/Background</item>
    </style>

    <!-- General TextView-->
    <style name="MyTextView">
        <item name="android:textColor">@color/OnSurface</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/OnSurface</item>
    </style>

    <!-- Subtitle in fragments -->
    <style name="MyTextViewSubtitle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Detail TextView: chronometer, time -->
    <style name="MyTextViewPrimary">
        <item name="android:textColor">@color/Primary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/Primary</item>
    </style>

    <!-- In Workout and SaveWorkout Distance-->
    <style name="MyTextViewDistanceWorkout">
        <item name="android:textColor">@color/Primary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/Primary</item>
    </style>

    <!-- In Workout and SaveWorkout Time-->
    <style name="MyTextViewTimeWorkout">
        <item name="android:textColor">@color/Primary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/Primary</item>
    </style>

    <!-- In Workout and SaveWorkout Speed-->
    <style name="MyTextViewSpeedWorkout">
        <item name="android:textColor">@color/Primary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/Primary</item>
    </style>

    <!-- In Workout little background for info-->
    <style name="WorkoutBackground">
        <item name="android:background">@color/progressBarBackground</item>
    </style>

    <!-- TextView for Steps count in Summary-->
    <style name="MyTextViewSteps">
        <item name="android:textColor">@color/progressBarGreen</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/progressBarGreen</item>
    </style>

    <!-- TextView for Distance count in Summary-->
    <style name="MyTextViewDistance">
        <item name="android:textColor">@color/progressBarBlue</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/progressBarBlue</item>
    </style>

    <!-- TextView for Calories count in Summary -->
    <style name="MyTextViewCalories">
        <item name="android:textColor">@color/progressBarRed</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/progressBarRed</item>
    </style>

    <!-- TextView for Steps count in Goals-->
    <style name="MyTextViewStepsGoals">
        <item name="android:textColor">@color/progressBarGreen</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/progressBarGreen</item>

    </style>

    <!-- TextView for Distance count in Goals-->
    <style name="MyTextViewDistanceGoals">
        <item name="android:textColor">@color/progressBarBlue</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableTint">@color/progressBarBlue</item>
        <item name="android:tint">@color/progressBarBlue</item>
    </style>

    <!-- TextView for Calories count in Goals -->
    <style name="MyTextViewCaloriesGoals">
        <item name="android:textColor">@color/progressBarRed</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/progressBarRed</item>
    </style>


    <!-- in Settings TextViewAge -->
    <style name="MyTextViewAge">
        <item name="android:textColor">@color/OnSurface</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/OnSurface</item>
    </style>


    <!-- in Settings TextViewHeight-->
    <style name="MyTextViewHeight">
        <item name="android:textColor">@color/OnSurface</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/OnSurface</item>
    </style>

    <!-- in Settings TextViewWeight-->
    <style name="MyTextViewWeight">
        <item name="android:textColor">@color/OnSurface</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/OnSurface</item>
    </style>

    <!-- Cards in fragments -->
    <style name="MyMaterialCardView">
        <item name="cardBackgroundColor">@color/Surface</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Buttons: Save, Finish ecc -->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/OnPrimary</item>
        <item name="android:backgroundTint">@color/Primary</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <!-- add and sub Buttons -->
    <style name="MyAddSubButtonStyle">
        <item name="android:background">@color/progressBarBackground</item>
        <item name="android:radius">8dp</item>
    </style>

    <!-- Delete Buttons -->
    <style name="DeleteButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/Delete</item>
    </style>

    <!-- Number picker -->
    <style name="NumberPicker">
        <item name="android:background">@color/Background</item>
        <item name="android:textColorPrimary">@color/OnSurface</item>
    </style>

</resources>